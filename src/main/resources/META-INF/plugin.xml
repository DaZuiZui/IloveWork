<idea-plugin>
    <id>com.example.helloworld</id>
    <name>HiDazui</name>
    <vendor email="y51288033@outlook.com" url="https://github.com/DaZuiZui">LoveDaZui</vendor>

    <description><![CDATA[
    A simple plugin that shows "Hello World" message.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <group id="HelloWorldGroup" text="DJ小嘴弟爱上班" description="Hello World相关功能" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>

            <action id="ShowMessageAction"
                    class="com.example.helloworld.HelloWorldAction"
                    text="Say Hi to FC work"
                    description="Show Hello World message"/>
            <action id="WorkSettingsAction"
                    class="com.example.helloworld.WorkSettingsAction"
                    text="setting"
                    description="设置工资和工作时间"/>
            <action id="ShowWorkDataAction"
                    class="com.example.helloworld.ShowWorkDataAction"
                    text="Wallet"
                    description="查看当前保存的工作设置"/>
            <action id="test1"
                    class="com.example.helloworld.HelloWorldAction"
                    text="给XXX的一个XXX"
                    description="Boss"/>
            <action id="test2"
                    class="com.example.helloworld.HelloWorldAction"
                    text="给XXX一个XXX"
                    description="Boss"/>
            <action id="test3"
                    class="com.example.helloworld.HelloWorldAction"
                    text="给XXX一个XX"
                    description="Boss"/>
            <action id="AboutDazui"
                    class="com.example.helloworld.HelloWorldAction"
                    text="About DJ小嘴弟 Github"
                    description="前往嘴弟 Github"/>
        </group>
    </actions>

</idea-plugin>